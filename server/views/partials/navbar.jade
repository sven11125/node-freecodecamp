nav.navbar.navbar-default.navbar-static-top.nav-height

    if typeof user !== 'undefined'
        .navbar-header
            button.hamburger.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
                .col-xs-12
                    span.hamburger-text Menu
            a.navbar-brand(href='/')
                img(src='/images/logos/logo-brackets-beige.svg', style='width:38px;display:inline;vertical-align:text-bottom;margin-right:5px')
                span #{settings.businessAppName}
        .collapse.navbar-collapse
            ul.nav.navbar-nav.navbar-right.hamburger-dropdown
                li
                    a(href='/') All Lessons
                li
                    a(href='/settings')
